<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'メールアドレスを入力' %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'パスワードを入力' %>
  </div>

  <div class="field">
    <%= f.label :パスワード（確認） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'パスワードを入力（確認）' %>
  </div>

  <div class="field">
    <%= f.label :ニックネーム %><br />
    <%= f.text_field :nickname, autofocus: true, placeholder: 'ニックネームを入力' %>
  </div>

  <div class="field">
    <%= f.label :愛車 %><br />
    <%= f.text_field :bike, autofocus: true, placeholder: '愛車を入力' %>
  </div>

  <div class="field">
    <%= f.label :プロフィール画像 %><br />
    <%= f.file_field :avatar, placeholder: '画像アップロード' %>
  </div>

  <%= f.hidden_field :rand, value: "#{SecureRandom.hex(5)}" %>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<p>すでにアカウントを持っていますか？</p>
<%= render "devise/shared/links" %>
