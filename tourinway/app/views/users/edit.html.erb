<%= form_for current_user do |f| %>
  <h2>プロフィール画像</h2>
  <div class="form-group file">
    <%= f.file_field :avatar, placeholder: "画像アップロード" %>
  </div>
  <h2>登録情報</h2>
  <div class="col-lg-6">
    <%= f.text_field :nickname, placeholder: "ニックネームを入力" %>
  </div>
  <div class="col-lg-6">
    <%= f.text_field :bike, placeholder: "愛車を入力" %>
  </div>
  <div class="form-group">
    <%= f.submit "送信" %>
  </div>
<% end %>