<a href="/products/<%= product.id %>">
  <div>
    <p>タイトル：<%= product.title %></p>
    <p>目的地：<%= product.destination %></p>
    <p><%= product.departure %>⇨<%= product.arrival %></p>
    <a href="/users/<%= product.user_id %>" >投稿者：<%= product.user.nickname %></a><br />
  </div>
</a>
<% unless current_user.nil? %>
  <% if product.user_id == current_user.id %>
    <a href="/products/<%= product.id %>/edit" >編集</a>
    <a href="/products/<%= product.id %>" data-method="delete" >削除</a>
  <% end %>
<% end %>
<br /><br />